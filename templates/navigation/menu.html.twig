{#
/**
 * @file
 * Theme override to display a menu.
 */
#}
{% import _self as menus %}

{#
  We call a macro which calls itself to render the full tree.
  https://twig.symfony.com/doc/3.x/tags/macro.html
#}
{{ menus.menu_links(items, attributes, 0) }}

{% macro menu_links(items, attributes, menu_level) %}
  {% import _self as menus %}
  {% if items %}
    {% if menu_level == 0 %}
      <ul{{ attributes.addClass('menu') }}>
    {% else %}
      <ul class="menu">
    {% endif %}
    {% for item in items %}
      <li{{ item.attributes.addClass('menu-item') }}>
        {% set link_title %}
          {% if item.bootstrap_icon %}
            <i class="bi {{ item.bootstrap_icon }}" aria-hidden="true"></i>
            <span class="link-text">{{ item.title }}</span>
          {% else %}
            {{ item.title }}
          {% endif %}
        {% endset %}
        
        {# We manually construct the link to ensure classes are added #}
        {% set link_attributes = item.url.getOption('attributes') ?: {} %}
        {% if item.bootstrap_icon %}
          {% set link_classes = link_attributes.class ?: [] %}
          {% if 'icon-link' not in link_classes %}
            {% set link_classes = link_classes|merge(['icon-link', 'icon-link-hover']) %}
          {% endif %}
          {% set dummy = item.url.setOption('attributes', link_attributes|merge({'class': link_classes})) %}
        {% endif %}

        {{ link(link_title, item.url) }}

        {% if item.below %}
          {{ menus.menu_links(item.below, attributes, menu_level + 1) }}
        {% endif %}
      </li>
    {% endfor %}
    </ul>
  {% endif %}
{% endmacro %}
